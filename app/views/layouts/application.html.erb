              url: 'homes/search',
              type: 'GET',
              dataType: 'html',
              data: {
                search: $("#search").val()
              }
            }).done(data => {
              $(".card-body_2").html(data)
            })
        };
        
        searchbutton.addEventListener('click', button1Click);
        
